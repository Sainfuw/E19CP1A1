<div class="container">
  <h1 class="mb-5">Proyectos</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="4">Name</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to 'Show', project, class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Crear nuevo proyecto', new_project_path, class: 'btn btn-primary btn-block' %>
</div>
