<div class="container">
  <h1 class="mb-5">Personas</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Telefono</th>
        <th colspan="4">Direccion</th>
      </tr>
    </thead>

    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td><%= worker.name %></td>
          <td><%= worker.phone %></td>
          <td><%= worker.address %></td>
          <td><%= link_to 'Show', worker, class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_worker_path(worker), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Crear nueva persona', new_worker_path, class: 'btn btn-primary btn-block' %>
</div>
